exercicio 01
Var
	inteiro n
Inicio
	lerNumero
	verificarParImpar
Fim

Procedimento lerNumero
Inicio
	escreva "Digite Numero"
	leia n
Fim

Função verificarParImpar: literal
Inicio
	Se (n resto 2 = 0) Então
		verificarParImpar = "Par"
	Senão
		verificarParImpar = "Impar"
	FimSe
Fim

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

Exercicio 02
Var
	inteiro opcao
Inicio
	escreva " 1-quadrado
			2-retângulo
			3-círculo
			4-trapézio
			5 - para sair"
	leia opcao
	enquanto(opcao != 5)
		Escolha
			caso (opcao = 1) então
				escreva "Area do quadrado: ", quadrado
			caso (opcao = 2) então
				escreva "Area do retângulo: ", retangulo
			caso(opcao = 3) então
				escreva "Area do circulo: ", circulo
			caso (opcao = 4) então
				escreva "Area do trapezio: ", trapezio
			Senão
				escreva "Opcao Invalida"
		FimEscolha
		leia opcao
	FimEnquanto
Fim

Função quadrado: real
Var
	real lado
Inicio
	leia lado
	quadrado = lado*lado
Fim

Função retangulo: real
Var
	real comprimento, largura
Inicio
	leia comprimento
	leia largura
	retangulo = comprimento*largura
Fim

Função circulo: real
Var
	real raio
Inicio
	leia raio
	circulo = 3,14*raio*raio
Fim

Função trapezio: real
Var
	real baseMaior, baseMenor, altura
Inicio
	leia baseMaior
	leia baseMenor
	leia altura
	trapezio = (baseMaior+baseMenor)*altura/2
Fim

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

Exercicio03

Inicio
	Principal
Fim

Procedimento Principal
Var
	inteiro n
	vetor [10000] de real numero
Inicio
	leia n
	lerNumero(n, numero)
	escreva "Numero maior: ", confereMaior(n, numero) 
Fim
	
Procedimento lerNumero(inteiro n, real[]numero)
Inicio
	Para i de 0 ate n-1 faça
		leia numero[i]
	FimPara
Fim

Função confereMaior(inteiro n, real[]numero): real
Var
	real resultado
Inicio
	resultado = numero[0]
	Para i de 0 ate n-1 faça
		Se (numero[i] > resultado) então
			resultado = numero[i]
		FimSe
	FimPara
	confereMaior = resultado
Fim


