Exercicio05

Inicio
	Principal
Fim
	
Procedimento Principal
Var
	vetor [50] real alturaHomens
	vetor [50] real alturaMulheres
	inteiro numHomems
	inteiro numMulher
	inteiro opcao
Inicio
	opcao = menu
	Enquanto (opcao != 8) faça
		Escolha
			caso (opcao = 1) entao
				lerDados(numHomens, numMulheres, alturaHomens, alturaMulheres)
			caso(opcao = 2) entao
				maiorAltura(numHomens, numMulheres, alturaHomens, alturaMulheres)
			caso (opcao = 3) entao
				menorAltura(numHomens, numMulheres, alturaHomens, alturaMulheres)
			caso (opcao = 4) entao
				escreva "Numero de homens: ", numHomens
			caso(opcao = 5) entao
				escreva "Numero de mulheres: ", numMulheres
			caso(opcao = 6) entao
				mediaAlturaHomens(numHomens, alturaHomens)
			caso(opcao = 7) entao
				mediaAlturaMulheres(numMulheres, alturaMulheres)
			Senão
				Escreva "Operação Inválida"
		FimEscolha
		opcao = menu
	FimEnquanto
Fim
	
Função menu: inteiro
Var
	inteiro opcao
Inicio
	escreva "1-Para ler os dados
			2-Para calcular a maior altura
			3-Para calcular a menor altura
			4-Para saber o numero de homens
			5-Para saber o numero de mulheres
			6-Para calcular a média de altura dos homens
			7-Para calcular a média de altura das mulheres
			8-Para sair"
	Leia opcao
Fim

Procedimmento lerDados(inteiro numHomens, inteiro numMulheres, real []alturaHomens, real []alturaMulheres)
Var
	caracter sexo
Inicio
	numHomens=0
	numMulheres=0
	leia sexo
	Se (sexo = 'M') então
		leia alturaHomens[numHomens]
		numHomens+=1
	Senão
		Se(sexo='F') então
			leia alturaMulheres[numMulheres]
			numMulheres+=1
		Senão
			escreva "Operação inválida"
		FimSe
	FimSe
Fim

Procedimento maiorAltura(inteiro numHomens, inteiro numMulheres, real []alturaHomens, real []alturaMulheres)
Var
	real maior
	inteiro i
Inicio
	maior=0.0
	Para i de 0 até numHomens-1 faça
		Se(alturaHomens[i]>maior) então
			maior = alturaHomens[i]
		FimSe
	FimPara
	Para i de 0 até numMulheres-1 faça
		Se(alturaMulheres[i]>maior) então
			maior = alturaMulheres[i]
		FimSe
	FimPara
	escreva "Maior altura: ", maior
Fim

Procedimento menorAltura(inteiro numHomens, inteiro numMulheres, real []alturaHomens, real []alturaMulheres)
Var
	real menor
	inteiro i
Inicio
	menor = 3.0
	Para i de 0 até numHomens-1 faça
		Se(alturaHomens[i]<menor) então
			menor = alturaHomens[i]
		FimSe
	FimPara
	Para i de 0 até numMulheres-1 faça
		Se(alturaMulheres[i]<menor) então
			menor = alturaMulheres[i]
		FimSe
	FimPara
	escreva "Menor Altura: ", menor
Fim

Procedimento mediaAlturaHomens(inteiro numHomens, real []alturaHomens)
Var
	real somaAltura, media
	inteiro i
Inicio
	somaAltura = 0
	Para i de 0 ate numHomens-1 faça
		somaAltura += alturaHomens[i]
	FimPara
	media = somaAltura/numHomens
	escreva "Media da Altura dos homens: ", media
Fim

Procedimento mediaAlturaMulheres(inteiro numMulheres, real []alturaMulheres)
Var
	real somaAltura, media
	inteiro i
Inicio
	somaAltura = 0
	Para i de 0 ate numMulheres-1 faça
		somaAltura += alturaMulheres[i]
	FimPara
	media = somaAltura/numMulheres
	escreva "Media da Altura dos mulheres: ", media
Fim

