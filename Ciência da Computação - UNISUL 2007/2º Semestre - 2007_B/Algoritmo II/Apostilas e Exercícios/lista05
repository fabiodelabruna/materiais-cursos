Excercicio04
Var
	real salarioFixo
	inteiro carrosVendidos

Inicio
	lerDados
	escreva "Salario total: ", calculaSalario
Fim

Procedimento lerDados
Var
	literal nome
Inicio
	leia nome
	leia salarioFixo
	leia carros vendidos
Fim

Funcao calculaSalario: real
Inicio
	calculaSalario = salarioFixo + (50*carrosVendidos)
Fim

