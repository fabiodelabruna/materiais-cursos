<web-app>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>br.unisul.rodrigo.view.controller.VerificaLoginServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>br.unisul.rodrigo.view.controller.LogoutServlet</servlet-class>
	</servlet>
	
	
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>	

</web-app>