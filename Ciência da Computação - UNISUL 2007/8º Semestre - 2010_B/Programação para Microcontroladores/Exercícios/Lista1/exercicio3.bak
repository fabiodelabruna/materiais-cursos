#include <16F877A.h>
#fuses XT, PROTECT
#use delay(clock=4Mhz)
#include <Lcd_4.c>
#include <stdlib.h>
#use rs232(baud=9600, xmit=pin_c6, rcv=pin_c7)


#define led1 pin_d0
#define led2 pin_d1
#define led3 pin_d2
#define led4 pin_d3
#define led5 pin_d4
#define led6 pin_d5
#define led7 pin_d6
#define led8 pin_d7

#define setLed pin_b5

void main() {

   int valor = 0;
   char v1[4];

   lcd_init();
   lcd_gotoxy(0,0);
   output_bit(setLed,1);
   output_d(0x00);

   while(true) {

      gets(v1);
      valor = atoi(v1);

      printf(lcd_putc, "\f%u", valor);
      output_d(valor);


   
   }

}

